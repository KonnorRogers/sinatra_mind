<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    
    <title> Mastermind </title>
    
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <form action="/mastermind" method="get">
      <div>
        <label for="input">Guess:</label>
        <input type="text" name="input">
      </div>
      
      <div class="button">
        <button type="submit" value="input">Enter a guess:</button>
      </div>
    </form>

    <div>
      <p class="message"> You gave input of: <%= input %> </p>
    </div>

    <div>
      <p class="message" id="bad_input"> <%= message if message == game.bad_input_message %> </p>
      <p class="message" id="win"> <%= message if message == game.win_message %> </p>
      <p class="message" id="loss"> <%= message if message == game.loss_message %> </p>
    </div>

    <div>
      <p class="feedback" id="guesses"> Previous guesses: <%= guesses %> </p>
    </div>

    <div>
      <p class="feedback" id="hints"> Hints: <%= hints %>
    </div>

    <div>
      <p class="feedback" id="turns_left"> Guesses left:<%= turns_left %> </p>
    </div>

    <div>
      <p class="feedback" id="key"> Key: <%= key %> </p>
    </div>

    <div>
      <p class="feedback" id="secret_code"> Secret code: <%= secret_code %> </p>
    </div>
  </body>
</html>

